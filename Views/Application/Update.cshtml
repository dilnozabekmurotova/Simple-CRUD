@model Finance_task2.Models.Users

<form method="post" asp-action="Update">
    <input asp-for="id" hidden />
    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Update Employee Type</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-6">
                        @Html.LabelFor(x => Model.RegionId, htmlAttributes: new { @class = "control-label col-md-2" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="Name" class="form-control" />
                    </div>
                    <div class="col-6">
                        @Html.DropDownListFor(x => Model.RegionId, ViewBag.getregionName as SelectList, htmlAttributes: new { @class = "form-control", @id = "Region" })
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="Mahalla"></label>
                    </div>
                    <div class="col-6">
                        <label asp-for="DistrictId"></label>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="Mahalla" class="form-control" />
                    </div>
                    <div class="col-6">
                        @Html.DropDownListFor(x => Model.DistrictId, ViewBag.getDistrictName as SelectList, htmlAttributes: new { @class = "form-control", @id = "District" })
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" asp-route-Id="Model.id" value="Update" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

