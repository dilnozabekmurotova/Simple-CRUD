@model IEnumerable<Finance_task2.Models.Users> 

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />

<div class="container p-3">
    <div class="row pt-6">
        <div class="col-3">
            <h2 class="text-primary"> Users</h2>
        </div>
        <div class="col-3 text-right">
            <a asp-controller="Application" asp-action="Create" class="btn btn-primary" >Create new User</a>
        </div>
    </div>
    <br />
    <div class="row pt-6 ">
        <div class="col-3"></div>
        <div class="col-5">
            <form method="get" asp-action="Index">
                <p style="display:flex; justify-content:space-between;">
                    <input class="form-control" type="search" placeholder="Seraching ..."
                           value="@ViewData["GetUsersDetails"]" name="userSearch" style="width:300px;" />
                    <input type="submit" value="Search" class="btn btn-primary" />
                </p>
            </form>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        <a asp-action="Index" asp-route-sortingemp="@ViewData["id"]">ID</a>
                    </th>
                    <th>
                        <a asp-action="Index" asp-route-sortingemp="@ViewData["Name"]">Name</a>

                    </th>
                    
                    <th>
                        <a asp-action="Index" asp-route-sortingemp="@ViewData["Mahalla"]">Mahalla</a>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="15%">@item.id</td>
                        <td width="15%">@item.Name</td>
                       
                        <td width="15%">@item.Mahalla</td>
                       
                        <td width="55%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Application" asp-action="Update" asp-route-Id="@item.id" class="btn btn-primary mx-1">Update</a>
                                <a asp-controller="Application" asp-action="Delete" asp-route-Id="@item.id" class="btn btn-danger mx-1" >Delete</a>
                            </div>
                        </td>
                    </tr>
}
            </tbody>
        </table> }
    else
    {
        <p>No items created yet</p>}
</div>

